<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="EditTextStyle" parent="NunitoSansFont">

        <item name="android:textColorHint">@color/title_hint_color</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginTop">24dp</item>

    </style>

    <style name="TextViewStyle" parent="NunitoSansFont">

        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:layout_marginTop">24dp</item>

    </style>

    <style name="TextViewNotesStyle" parent="NunitoSansFont">

        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:text">@string/notes</item>
        <item name="android:textSize">36sp</item>

    </style>

    <style name="NunitoSansFont">

        <item name="android:fontFamily">@font/nunito_sans_regular</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>

    </style>

    <style name="MyRoundFAB" parent="ShapeAppearance.MaterialComponents.MediumComponent">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>

    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="searchViewStyle">@style/AppTheme.SearchView</item>
    </style>

    <style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@null</item>
        <item name="closeIcon">@drawable/ic_close</item>
    </style>

    <style name="EditTextTheme" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">#400060AB</item>
        <item name="colorControlActivated">#0060AB</item>
    </style>

</resources>