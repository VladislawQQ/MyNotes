<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:backgroundTint="@color/item_note_background_color"
    android:layout_marginVertical="8dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_delete_bucket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/ic_delete_bucket"
        android:layout_gravity="center"
        android:visibility="gone"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Some text for testing my notes with design"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        />

</androidx.cardview.widget.CardView>